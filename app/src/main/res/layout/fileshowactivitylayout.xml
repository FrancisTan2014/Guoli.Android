<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            android:textStyle="bold"
            android:id="@+id/fileshow_title"
            android:gravity="center"
            android:textSize="@dimen/homepagetextsize"
            />
        <LinearLayout
            android:id="@+id/search_file_back"
            android:layout_width="wrap_content"
            android:layout_height= "45dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@mipmap/db_1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/fileshow_filepath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="行车资料"
        android:textSize="@dimen/detailstextsize"
        />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorwhite"
        />
    <ListView
        android:id="@+id/search_showfiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"

        ></ListView>

</LinearLayout>