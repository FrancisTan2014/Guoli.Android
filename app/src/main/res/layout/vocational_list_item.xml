<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/volist_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="考试内容"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/volist_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="截止日期"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/volist_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="最高分数"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/volist_item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="通过分数"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/volist_item5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="考试次数"
            android:gravity="center"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:padding="3dp"
                android:id="@+id/volist_item6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="6dp"
                android:gravity="center"
                android:background="@drawable/buttonclickcolor"

                />

        </LinearLayout>




    </LinearLayout>
    
</LinearLayout>