<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
        <TextView
            android:id="@+id/daily_Listing_itemmessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/daily_Listing_itemtype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/daily_Listing_itemnumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/daily_Listing_itemtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/daily_Listing_itemdo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:padding="5dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/buttonclickcolor"
            android:textColor="@color/white"
            />
</LinearLayout>