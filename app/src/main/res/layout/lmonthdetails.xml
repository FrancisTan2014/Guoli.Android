<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:paddingTop="@dimen/detailslayoutpadingtop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_height="wrap_content"
                android:text="日期："
                android:layout_width="180dp"
                android:gravity="right"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:textSize="@dimen/detailstextsize"
                    android:id="@+id/monthdetails_takedate"
                    android:layout_width="140dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/checi"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="总结人："
                android:textSize="@dimen/detailstextsize"
                />
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/monthdetails_address"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="180dp"
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />
            <TextView
                android:layout_marginLeft="120dp"
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />

        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="180dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="本月工作完成情况："
                />
            <EditText
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_monthdetails_aim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:background="@null"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack"
            />
        <LinearLayout
            android:paddingTop="@dimen/detailslayoutpadingtop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="180dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="存在问题分析："
                android:textSize="@dimen/detailstextsize"
                />
            <EditText
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_monthdetails_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:background="@null"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="180dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="下月工作计划："
                />
            <EditText
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_monthdetails_dopinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:background="@null"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/daily_monthdetails_save"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="保存到本地"
                android:textSize="@dimen/detailstextsize"
                android:textColor="@color/white"
                android:background="@drawable/buttonclickcolor"
                />
            <Button
                android:visibility="invisible"
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_monthdetails_saveup"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="保存并上传"
                android:textColor="@color/white"
                android:background="@drawable/buttonclickcolor"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"

                />
            <Button
                android:id="@+id/daily_monthdetails_cancle"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/detailstextsize"
                android:textColor="@color/white"
                android:background="@drawable/buttonclickcolor"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>