<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <TextView
        android:id="@+id/course_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorwhite"
        android:gravity="center"
        android:padding="10dp"
        android:text="业务学习"
        android:textStyle="bold"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorblue"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tokedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试通知"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/detailstextsize"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorblue"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/colorwhite"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorblue2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="3dp"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="考试内容"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="截止日期"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="最高分数"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="通过分数"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="考试次数"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="状态"
            android:gravity="center"
            android:layout_weight="1"

            />



    </LinearLayout>

<ListView

    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:id="@+id/vocational_list"
    android:layout_width="match_parent"
    android:layout_height="220dp"

    ></ListView>


    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        >
        <Button
            android:id="@+id/test_simulat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="业务学习"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/buttonclickcolor"
            android:padding="8dp"
            />
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/test_simulat2"
            android:layout_toRightOf="@+id/test_simulat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="我的错题"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:background="@drawable/buttonclickcolor"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_simulat"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/test_simulat3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="业务学习"
                android:gravity="center"
                android:background="@drawable/buttonclickcolor"
                android:padding="8dp"
                android:visibility="gone"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/test_simulat4"
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="考试练习"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/buttonclickcolor"
                android:padding="8dp"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/test_simulat5"
                android:layout_width="120dp"
                android:background="@drawable/buttonclickcolor"
                android:layout_height="wrap_content"
                android:text="考试统计"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/white"
                android:visibility="gone"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
