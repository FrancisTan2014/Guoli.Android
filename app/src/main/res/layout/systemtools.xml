<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/systemtools_layout"
    >


    <LinearLayout
    android:id="@+id/system_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/system_tools1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:text="日历"
            android:background="@mipmap/i25_1"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/system_tools2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="计算器"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_2"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/system_tools3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="记事本"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_3"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:id="@+id/system_tools4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="拍照"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_4"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/system_tools5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            android:text="录音"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_5"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            />
        <TextView
            android:id="@+id/system_tools6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            android:text="录像"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_6"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/detailstextsize"
        android:textColor="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:id="@+id/system_tools7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            android:text="最新公告"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_7"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            />
        <TextView
            android:id="@+id/system_tools8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="意见反馈"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_8"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            />
        <TextView
            android:id="@+id/system_tools9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="退出系统"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:background="@mipmap/i25_9"
            android:gravity="center_vertical"
            android:paddingLeft="100dp"
            />
    </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/system_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        ></FrameLayout>
</RelativeLayout>