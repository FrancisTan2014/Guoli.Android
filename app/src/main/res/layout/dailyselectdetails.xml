<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:paddingTop="@dimen/detailslayoutpadingtop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_height="wrap_content"
                android:text="日期："
                android:layout_width="120dp"
                android:gravity="right"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:textSize="@dimen/detailstextsize"
                    android:id="@+id/selectdetails_takedate"
                    android:layout_width="140dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/checi"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="抽查地点："
                />
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/selectdetails_address"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />


            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="抽查类型："

                />
            <Spinner
                android:id="@+id/selectdetails_LocomotiveType"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/detailstextsize"
                android:singleLine="true"
                android:gravity="center"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="120dp"
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />
            <TextView
                android:layout_marginLeft="120dp"
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />
            <TextView
                android:layout_marginLeft="120dp"
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="抽查时间："
                />

            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/selectdetails_time1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="到"
                />
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/selectdetails_time2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                />
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="180dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="发现问题个数："
                />

            <EditText
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/selectdetails_promcount"
                android:layout_width="140dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@null"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="120dp"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />
            <TextView
                android:layout_marginLeft="180dp"
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:background="@color/sblack"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="抽查内容："
                />
            <EditText
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_selectdetails_aim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:background="@null"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack"
            />
        <LinearLayout
            android:paddingTop="@dimen/detailslayoutpadingtop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="发现问题："
                />
            <EditText
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_selectdetails_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:background="@null"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop"
            >
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="处理意见："
                />
            <EditText
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_selectdetails_dopinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:background="@null"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            >

            <Button
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_selectdetails_save"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="保存到本地"
                android:textColor="@color/white"
                android:background="@drawable/buttonclickcolor"
                />
            <Button
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_selectdetails_saveup"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="保存并上传"
                android:textColor="@color/white"
                android:background="@drawable/buttonclickcolor"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:visibility="invisible"
                />
            <Button
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/daily_selectdetails_cancle"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:background="@drawable/buttonclickcolor"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>