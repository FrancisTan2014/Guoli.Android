<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/detailslayoutpadingtop"
        >
        <TextView
            android:textSize="@dimen/detailstextsize"
            android:layout_height="wrap_content"
            android:text="日期："
            android:layout_width="120dp"
            android:gravity="right"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/accept_takedate"
                android:layout_width="140dp"
                android:gravity="center"
                android:text=""
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:textSize="@dimen/detailstextsize"
            android:id="@+id/checi"
            android:layout_width="120dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="验收人："
            />
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/accept_StudentId"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                />


        <TextView
            android:layout_width="120dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="司机："
            android:textSize="@dimen/detailstextsize"
            />
        <TextView
            android:textSize="@dimen/detailstextsize"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/accept_DriverId"
            android:gravity="center"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="120dp"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/sblack"
            />
        <TextView
            android:layout_marginLeft="120dp"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/sblack"
            />
        <TextView
            android:layout_marginLeft="120dp"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/sblack"
            />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="@dimen/detailslayoutpadingtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="@dimen/detailstextsize"
            android:layout_width="120dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="司机得分："

            />

        <EditText
            android:textSize="@dimen/detailstextsize"
            android:id="@+id/accept_LocomotiveType"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=""
            android:singleLine="true"
            android:gravity="center"
            />


        <TextView
            android:layout_width="120dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="副司机："
            android:textSize="@dimen/detailstextsize"
            />

            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/accept_ViceDriverId"
                android:layout_width="140dp"
                android:text=""
                android:layout_height="wrap_content"
                android:gravity="center"
                />


        <TextView
            android:layout_width="120dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="副司机得分："
            android:textSize="@dimen/detailstextsize"
            />


        <EditText
            android:textSize="@dimen/detailstextsize"
            android:id="@+id/accept_EndAttendTime"
            android:layout_width="140dp"
            android:text=""
            android:background="@null"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="120dp"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/sblack"
            />
        <TextView
            android:layout_marginLeft="120dp"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/sblack"
            />
        <TextView
            android:layout_marginLeft="120dp"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/sblack"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/detailslayoutpadingtop"
        >
        <TextView
            android:textSize="@dimen/detailstextsize"
            android:layout_width="120dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="主要原因："
            />
        <EditText
            android:textSize="@dimen/detailstextsize"
            android:id="@+id/daily_accept_aim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text=""
            android:background="@null"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:background="@color/sblack"
        />
    <LinearLayout
        android:paddingTop="@dimen/detailslayoutpadingtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="指导意见："
            android:textSize="@dimen/detailstextsize"
            />
        <EditText
            android:textSize="@dimen/detailstextsize"
            android:id="@+id/daily_accept_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text=""
            android:background="@null"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:background="@color/sblack"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/daily_accept_save"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="保存到本地"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            android:background="@drawable/buttonclickcolor"
            />
        <Button
            android:textSize="@dimen/detailstextsize"
            android:id="@+id/daily_accept_saveup"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="保存并上传"
            android:textColor="@color/white"
            android:background="@drawable/buttonclickcolor"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/daily_accept_cancle"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/detailstextsize"
            android:textColor="@color/white"
            android:background="@drawable/buttonclickcolor"
            />
    </LinearLayout>
</LinearLayout>