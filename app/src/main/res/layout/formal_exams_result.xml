<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorblue"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="考试结果"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/stoptest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="考试结束"

        android:textSize="20sp"
        android:gravity="center"

        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

    <LinearLayout
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总答题数："
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答对题数："
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答错题数："
            />
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正确率："
            />

    </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/qustrall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于。。。。"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/right_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/problem_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通过分数："
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/accuracys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95"
                />

        </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/teststop_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="对于韩斌的天气操作的规范这一类已经滚噶烂熟了"
        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/stoptest_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="@drawable/buttonclickcolor"
android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>
</LinearLayout>