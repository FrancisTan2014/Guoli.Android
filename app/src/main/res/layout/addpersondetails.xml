<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/detailslayoutpadingtop"
        >
        <TextView
            android:layout_height="wrap_content"
            android:text="确定日期："
            android:layout_width="150dp"
            android:gravity="right"
            android:textSize="@dimen/detailstextsize"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/addremovekp_takedate"
                android:layout_width="140dp"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/detailstextsize"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/checi"
            android:layout_width="150dp"
            android:gravity="right"
            android:textSize="@dimen/detailstextsize"
            android:layout_height="wrap_content"
            android:text="关键人："
            />
            <TextView
                android:textSize="@dimen/detailstextsize"
                android:id="@+id/addremovekp_TrainCode"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                />


        <TextView
            android:textSize="@dimen/detailstextsize"
            android:layout_width="150dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="包保人："

            />
        <EditText
            android:id="@+id/addremovekp_LocomotiveType"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/detailstextsize"
            android:text=""

            android:singleLine="true"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="150dp"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/sblack"
            />
