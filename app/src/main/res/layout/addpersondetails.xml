            android:layout_width="150dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="预计解除日期："
            android:textSize="@dimen/detailstextsize"
            />

            <TextView
                android:id="@+id/addremovekp_AttendTime"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/detailstextsize"
                />


        <TextView
            android:textSize="@dimen/detailstextsize"
            android:layout_width="150dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="关键点："
            />

            <TextView
                android:id="@+id/addremovekp_EndAttendTime"
                android:layout_width="140dp"
                android:text=""
                android:textSize="@dimen/detailstextsize"
                android:layout_height="wrap_content"
                android:gravity="center"
                />
        <TextView
            android:layout_width="150dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="实际解除日期："
            android:textSize="@dimen/detailstextsize"
            />

        <TextView
            android:id="@+id/daily_addremovekp_removedata"
            android:layout_width="140dp"
            android:text=""
            android:textSize="@dimen/detailstextsize"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
